generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Project {
  id      String      @id @default(uuid())
  name    String      @unique 
  entries TimeEntry[]
}
model TimeEntry {
  id          String   @id @default(uuid())
  project     Project  @relation(fields: [projectId], references: [id])
  projectId   String
  date        DateTime
  hours       Float
  description String?
  createdAt   DateTime @default(now())
}